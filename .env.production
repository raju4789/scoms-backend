# SCOMS Production Environment Configuration

# Database Configuration (for production deployment)
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=scoms
DB_SSL=true
DB_MAX_CONNECTIONS=50
DB_CONNECTION_TIMEOUT=60000

# Consul Configuration
CONSUL_HOST=consul
CONSUL_PORT=8500

# Application Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=warn

# Device Configuration (production values - business-ready)
DEVICE_PRICE=150
DEVICE_WEIGHT_KG=0.365
SHIPPING_RATE_PER_KG_KM=0.01
SHIPPING_COST_THRESHOLD_PERCENT=15

# Observability
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
LOKI_URL=http://loki:3100
